						YUI().use('node', function (Y) {	
							
							function loadVideo(videoPath, posterPath){
							
								var varFilePath = videoPath;

								if ((navigator.userAgent.match(/iPhone/i) == "iPhone") || (navigator.userAgent.match(/iPod/i) == "iPod") || (navigator.userAgent.match(/Android/i) == "Android") || (navigator.userAgent.match(/iPad/i) == "iPad")) {
									varFilePath = varFilePath.replace("/manifest.f4m", "/playlist.m3u8")
									Y.one("#videoHome").empty();
									Y.one("#videoHome").setHTML("<source src='" +varFilePath+"' type='video/mp4'>");
								}
								else {
									var parameters = {
										src: varFilePath,
										autoPlay: "false",
										verbose: true,
										controlBarAutoHide: "true",
										controlBarPosition: "bottom",
										poster: posterPath,
										scaleMode: "stretch",
										loop: true,
										bufferingOverlay: false
									};
									swfobject.embedSWF( "/newsletter-theme/swf/StrobeMediaPlayback.swf", "videoHome", "100%", 207, "10.3.0", "expressInstall.swf", parameters, {
												allowFullScreen: "true",
												wmode: "transparent"
											},
											{
												name: "video11"
											});
								}
							}

							loadVideo("$videoUrl","$modifiedUrl$a");
							
						});
						</script>
         		
                  
